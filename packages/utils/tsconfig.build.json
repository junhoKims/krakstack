{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.*", "**/*.spec.*", "**/*.stories.*", "**/__storybook__/*", "dist", "build", "node_modules", "**/*.md"]
}
