{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@krakstack/typescript-config/react-internal.json",
  "compilerOptions": {
    "types": [
      "node",
      "react",
      "react-dom",
      "glob",
      "global-types",
      "vitest/globals"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": ["src", "docs/.vitepress/config.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "docs/.vitepress/cache"
  ]
}