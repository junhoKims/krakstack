{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@krakstack/typescript-config/react-internal.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "noEmit": false
  },
  "include": ["./src"],
  "exclude": ["./dist", "./node_modules"]
}
